class Car:
    def __init__(self, registration_number, maximum_speed):
        self.registration_number = registration_number
        self.maximum_speed = maximum_speed
        self.current_speed = 0
        self.traveled_distance = 0

    def __str__(self):
        return (f"Registration Number: {self.registration_number}"
                f"\nMaximum Speed: {self.maximum_speed} km/h"
                f"\nCurrent Speed: {self.current_speed} km/h"
                f"\nTraveled Distance: {self.traveled_distance} km")

    def accelerate(self, change_speed):
        if change_speed > 0:
            self.current_speed = min(self.current_speed + change_speed, self.maximum_speed)
        else:
            self.current_speed = max(self.current_speed + change_speed, 0)

    def drive(self, hours):
        self.traveled_distance += self.current_speed * hours

new_car = Car("ABC-123", 142)

new_car.accelerate(30)
new_car.accelerate(70)
new_car.accelerate(50)
print("Current Speed:", new_car.current_speed)

new_car.drive(1.5)
print("Traveled Distance after driving for 1.5 hours:", new_car.traveled_distance)

new_car.accelerate(-200)
print("Final Speed after emergency brake:", new_car.current_speed)
